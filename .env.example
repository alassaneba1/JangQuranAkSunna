# JangQuranAkSunna - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application
APP_NAME=JangQuranAkSunna
APP_VERSION=1.0.0
ENVIRONMENT=development

# Database (PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=jangquranaksunna
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://postgres:your_secure_password_here@postgres:5432/jangquranaksunna

# Redis Cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Elasticsearch
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your_elastic_password_here

# MinIO (S3-compatible storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ENDPOINT=http://minio:9000
MINIO_BUCKET_NAME=jangquranaksunna

# RabbitMQ
RABBITMQ_USERNAME=admin
RABBITMQ_PASSWORD=your_rabbitmq_password_here
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long
JWT_EXPIRATION_MS=900000
JWT_REFRESH_EXPIRATION_MS=2592000000

# OAuth Google
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Payment Providers
# Orange Money (Senegal)
ORANGE_MONEY_API_KEY=your_orange_money_api_key
ORANGE_MONEY_SECRET=your_orange_money_secret
ORANGE_MONEY_MERCHANT_ID=your_merchant_id

# Wave (Senegal)
WAVE_API_KEY=your_wave_api_key
WAVE_SECRET=your_wave_secret

# Stripe
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Email Configuration (SendGrid, AWS SES, etc.)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=your_sendgrid_api_key
SMTP_FROM=noreply@jangquranaksunna.org

# Firebase (for mobile notifications)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# CDN Configuration
CDN_BASE_URL=https://cdn.jangquranaksunna.org
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id
CLOUDFLARE_API_TOKEN=your_cloudflare_token

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_ENDPOINT=http://prometheus:9090

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_REQUESTS_PER_MINUTE=60
MAX_FILE_SIZE_MB=500

# Feature Flags
ENABLE_OFFLINE_DOWNLOADS=true
ENABLE_DONATIONS=true
ENABLE_YOUTUBE_IMPORT=true
ENABLE_TELEGRAM_IMPORT=true
ENABLE_LIVE_STREAMING=false

# Content Policies
MAX_DOWNLOAD_DURATION_DAYS=90
MAX_DOWNLOADS_PER_USER=50
ENABLE_CONTENT_ENCRYPTION=true

# API Configuration
API_BASE_URL=http://localhost:8080
API_RATE_LIMIT=100
API_TIMEOUT_MS=30000

# Admin Web Configuration
ADMIN_BASE_URL=http://localhost:3000
ADMIN_SESSION_SECRET=your_admin_session_secret_here

# Mobile App Configuration
MOBILE_API_URL=http://10.0.2.2:8080
MOBILE_VERSION_CODE=1
MOBILE_VERSION_NAME=1.0.0

# Development Tools
DEBUG=true
LOG_LEVEL=info
SPRING_PROFILES_ACTIVE=development

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=jangquranaksunna-backups

# Localization
DEFAULT_LANGUAGE=fr
SUPPORTED_LANGUAGES=fr,ar,wo,pul
DEFAULT_TIMEZONE=Africa/Dakar
